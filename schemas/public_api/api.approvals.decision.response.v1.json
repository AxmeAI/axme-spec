{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://axme.dev/schemas/public_api/api.approvals.decision.response.v1.json",
  "title": "ApiApprovalsDecisionResponseV1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "ok",
    "approval"
  ],
  "properties": {
    "ok": {
      "type": "boolean",
      "const": true
    },
    "approval": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "approval_id",
        "decision",
        "decided_at"
      ],
      "properties": {
        "approval_id": {
          "type": "string",
          "format": "uuid"
        },
        "decision": {
          "type": "string",
          "enum": [
            "approve",
            "reject"
          ]
        },
        "comment": {
          "type": [
            "string",
            "null"
          ],
          "maxLength": 1000
        },
        "decided_at": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  }
}
