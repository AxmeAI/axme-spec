{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://axme.dev/schemas/public_api/api.media.create_upload.request.v1.json",
  "title": "ApiMediaCreateUploadRequestV1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "owner_agent",
    "filename",
    "mime_type",
    "size_bytes"
  ],
  "properties": {
    "owner_agent": {
      "type": "string",
      "minLength": 3,
      "maxLength": 255
    },
    "filename": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "mime_type": {
      "type": "string",
      "minLength": 3,
      "maxLength": 255
    },
    "size_bytes": {
      "type": "integer",
      "minimum": 1,
      "maximum": 2147483648
    },
    "sha256": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    },
    "ttl_seconds": {
      "type": "integer",
      "minimum": 60,
      "maximum": 604800
    }
  }
}
